{
	"compilerOptions": {
		"module": "ESNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"baseUrl": ".",
		"declarationDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"jsx": "preserve",
		"target": "ES2018",
		"sourceMap": true,
		"lib": ["ES2018", "DOM"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
